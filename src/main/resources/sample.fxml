<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainWindow" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controller">
   <left>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Book list ">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <ListView fx:id="bookList" prefHeight="200.0" prefWidth="300.0" VBox.vgrow="ALWAYS" />
            <Button fx:id="loadNotesBtn" mnemonicParsing="false" text="Load notes" />
         </children>
      </VBox>
   </left>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Load books">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#loadNotes" text="Load" />
               </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Export">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#exportBookNotes" text="Export notes from selected book" />
                  <MenuItem mnemonicParsing="false" onAction="#exportAllNotes" text="Export notes from all books" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Book notes">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <ScrollPane VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="notesVBox" alignment="TOP_CENTER" prefHeight="298.0" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </center>
</BorderPane>
